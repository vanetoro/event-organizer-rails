<h1>Create a new Event</h1>

<%= form_for @event do |f| %>
<%= f.hidden_field :host_id, value: @host.id%>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :description %>
<%= f.text_field :description %><br>
<%= f.label :date %>
<%= f.datetime_field :date %><br>
<%= f.submit %><br>
<% end %>
